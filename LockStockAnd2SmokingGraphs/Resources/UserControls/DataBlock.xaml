<UserControl x:Class="LockStockAnd2SmokingGraphs.Resources.UserControls.DataBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LockStockAnd2SmokingGraphs.Resources.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderThickness="1" BorderBrush="Black">
        <StackPanel>
            <Label x:Name="title"
                   Content="{Binding Title}" HorizontalAlignment="Center"/>
            <Label x:Name="data"
                   Content="{Binding Value}" HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl>
